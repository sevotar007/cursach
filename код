/* Private variables ---------------------------------------------------------*/
ADC_HandleTypeDef hadc;													//генерация хэндла ацп

UART_HandleTypeDef huart1;												//генерация хэндла юарт

/* USER CODE BEGIN PV */
int __io_putchar(int ch){
	HAL_UART_Transmit(&huart1, (uint8_t *)&ch, 1, 0xFFFF);				//ретаргетинг(для работы printf) функция, которая внутри должна отправить байт данных пришедший к ней в юарт
	return 0;
}
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_ADC_Init(void);
static void MX_USART1_UART_Init(void);
